<h2>MFA Verification</h2>

@using(Html.BeginForm(FormMethod.Post))
{
    <div class="form-group">
        <label for="mfa">Please enter your six-digit code:</label>
        <input type="text" id="mfa" name="mfa" placeholder="Enter your 6 digit code" />
    </div>
    <input type="submit" value="Submit" />
}