@using LegionSociety.Contacts.Models
@model InitializeMfaModel
@{
    <img src="@("data:img/png;base64," + Convert.ToBase64String(Model.QrImage))" class="mfa-qr" />

    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="form-group">
            <label for="key">Your MFA Key:</label>
            <input type="text" id="key" readonly value="@Model.TotpCode" />
        </div>
        <div class="form-group">
            <label for="mfa">Confirm TOTP:</label>
            <input type="text" id="mfa" name="mfa" placeholder="Enter your 6 digit code" />
        </div>
        <input type="submit" value="Submit" />

    }

}
