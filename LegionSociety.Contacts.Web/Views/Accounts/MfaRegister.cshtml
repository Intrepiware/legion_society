@using LegionSociety.Contacts.Models
@model InitializeMfaModel
@{
    ViewData["Title"] = "MFA Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@{    
    <div class="card card-container">
        <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
        <img id="mfa-qr-code" class="mfa-qr-code" src="@("data:img/png;base64," + Convert.ToBase64String(Model.QrImage))" />
        <p id="profile-name" class="profile-name-card"></p>
        @using(Html.BeginForm(FormMethod.Post, new { @class = "form-signin"} ))
        {
            <label>Your MFA Key:</label>
            <input type="text" id="key" readonly value="@Model.TotpCode" />
            <span id="reauth-email" class="reauth-email"></span>
            <input type="text" name="mfa" id="inputMfa" class="form-control" placeholder="Please verify your code" required autofocus>
            <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Verify</button>
        }
    </div><!-- /card-container -->
}
